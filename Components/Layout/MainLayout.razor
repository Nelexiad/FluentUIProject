@inherits LayoutComponentBase
@inject IDialogService DialogService

<FluentLayout>
    <FluentHeader >
        FluentCumbia
       
        <FluentIcon Value="@(new Icons.Regular.Size20.Settings())"
                    Color="Color.Lightweight"
                    OnClick="@ShowSettingAsync" />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        

        <FluentNavMenu Width="250" Title="Nav your 'life'">
            <FluentNavLink Icon="@(new Icons.Regular.Size20.Home())" Href="/" Match="NavLinkMatch.All">Home</FluentNavLink>
            <FluentNavLink Href="/Counter" Match="NavLinkMatch.All">Counter</FluentNavLink>
            <FluentNavLink Href="/Weather" Match="NavLinkMatch.All">Weather</FluentNavLink>
            <FluentNavLink Href="/List" Match="NavLinkMatch.All">Lists</FluentNavLink>
        </FluentNavMenu>
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        kill your self
    </FluentFooter>
</FluentLayout>

<FluentDialogProvider />


@code
{
    private async Task ShowSettingAsync()
    {
        await DialogService.ShowPanelAsync<Pages.Settings>(new DialogParameters()
            {
                Title = "Settings",
                Alignment = HorizontalAlignment.Right,
                SecondaryAction = null,
            });
    }
}